{
  "compilerOptions": {
    "target": "es2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "core/*": ["src/core/*"],
      "domain/*": ["src/domain/*"],
      "providers/*": ["src/providers/*"],
      "views/*": ["src/views/*"]
    },
    "types": ["node", "jest"],
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false
  },

  "include": ["src", "theme.ts"],
  "exclude": ["node_modules", "dist"]
}
